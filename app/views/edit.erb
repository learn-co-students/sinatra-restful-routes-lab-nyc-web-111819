<h1>This is the New Recipe Edit Page</h1>

<form method="POST" action="/recipes/<%= @recipe.id%>">
<input type="hidden" name="_method" value="PATCH">
<input type="text" id="name" name="recipe[name]" value="<%= @recipe.name%>">
<input type="text" id="ingredients" name="recipe[ingredients]" value="<%= @recipe.ingredients%>">
<input type="text" id="cook_time" name="recipe[cook_time]" value="<%= @recipe.cook_time%>">
<input type="submit" value="Update">
</form>
